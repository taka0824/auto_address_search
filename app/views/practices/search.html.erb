<div class="container">
  <div class="row">
    <div class="col-xs-5">
      boook or user
      <% if @range == "1" %>
      user
        <table class="table">
          <thead>
            <tr>
              <th>ユーザーネーム</th>
            </tr>
          </thead>
          <% @users.each do |user| %>
          <tr>
            <td><%= user.name %></td>
          </tr>
          <% end %>
        </table>
      <% elsif @range == "2" %>
      book
        <table class="table">
          <thead>
            <tr>
              <th>本のタイトル</th>
            </tr>
          </thead>
          <% @books.each do |book| %>
          <tr>
            <td><%= book.title %></td>
          </tr>
          <% end %>
        </table>
      <% end %>
    </div>
  </div>
</div>